@page "/"

<PageTitle>Home</PageTitle>

<MudPaper Class="pa-6" Elevation="0">
    <MudText Typo="Typo.h3" GutterBottom="true">Welcome to Azure AI Foundry Agents Catalog</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">
        This application lets you browse, discover, and chat with AI agents hosted on an Azure AI Foundry project.
        Select an agent from the menu to start a conversation and explore their capabilities in real time.
    </MudText>

    <MudDivider Class="mb-4" />

    <MudList T="object" Dense="true">
        <MudListItem Icon="@Icons.Material.Filled.PersonSearch">
            <MudText Typo="Typo.subtitle1">Browse Agents</MudText>
            <MudText Typo="Typo.body2">View all available AI agents and their descriptions.</MudText>
        </MudListItem>

        <MudListItem Icon="@Icons.Material.Filled.Chat">
            <MudText Typo="Typo.subtitle1">Chat in Real Time</MudText>
            <MudText Typo="Typo.body2">Interact with agents using a modern, responsive chat interface.</MudText>
        </MudListItem>

        <MudListItem Icon="@Icons.Material.Filled.Cloud">
            <MudText Typo="Typo.subtitle1">Powered by Azure AI Foundry</MudText>
            <MudText Typo="Typo.body2">All conversations are securely processed using Azure AI Foundry services.</MudText>
        </MudListItem>

        <MudListItem Icon="@Icons.Material.Filled.Style">
            <MudText Typo="Typo.subtitle1">Modern UI</MudText>
            <MudText Typo="Typo.body2">Built with MudBlazor for a seamless and accessible experience.</MudText>
        </MudListItem>
    </MudList>

    <MudDivider Class="my-4" />

    <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
        <MudText Typo="Typo.body2">
            To get started, select an agent from the navigation menu. For more information, see the
            <MudLink Href="https://github.com/GaetanSantos/Blazor-Azure-AI-Foundry-Agents-Catalog" Target="_blank" Color="Color.Primary">
                project documentation
            </MudLink>.
        </MudText>
    </MudAlert>
</MudPaper>